.column {
  width: $sidebar-desktop;

  +tablet-mobile() {
    width: auto;
  }
}

.site-brand-container {
  background: var(--theme-color);

  .site-nav-on & {
    +tablet-mobile() {
      box-shadow: 0 0 16px rgba(255, 243, 243, 0.92);
    }
  }
}

.site-meta {
  padding: 20px 0px;
  background: #AC9C85
}

.header { 
  background: rgba(#A4BBAB,1) none repeat scroll !important; 
}

.site-nav-toggle, .site-nav-right {
  +tablet() {
    flex-column();
  }

  .toggle {
    color: white;

    .toggle-line {
      background: white;
    }
  }
}
